generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Berth {
  id        Int      @id @default(autoincrement())
  berthId   String   @unique
  terminal  String
  numCranes Int
  lat       Float
  long      Float
  length    Int
  width     Int
  draught   Int
  occupied  Boolean
  nextAvail DateTime @default(now())
}

model Shipment {
  id           Int      @id @default(autoincrement())
  shipId       Int      @unique
  vesselName   String
  type         String
  flag         String
  grossTonnage Int
  deadweight   Int
  length       Int
  beam         Int
  draught      Int
  eta          DateTime
  etd          DateTime
  berth        Int
  linkedId     Int
}

model User {
  id       Int     @id @default(autoincrement())
  email    String
  password String
  name     String?
}
